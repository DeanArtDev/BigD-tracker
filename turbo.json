{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": ["**/.env.*local"],

  "tasks": {
    "start": {
      "dependsOn": ["build"]
    },
    "dev": {
      "dependsOn": ["^build"]
    },

    "build": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**"]
    },

    "test": {
      "dependsOn": ["^test"]
    },

    "format": {
      "dependsOn": ["^format"]
    },

    "format:fix": {
      "dependsOn": ["^format:fix"]
    },

    "lint": {
      "dependsOn": ["^lint"]
    },

    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "clean": {
      "cache": false
    }
  }
}
